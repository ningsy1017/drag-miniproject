/* pages/camera/caera.wxss */
camera{
  background-color: rbga(0,0,0,0.7);
  opacity: 0.7;
  position: relative;
}
.main-content{
  position: relative;
  width:100%;
  height:100vh;
}
.telev{
  width:550rpx;
  height:400rpx;
  display: block;
  margin:0 auto;
  position: absolute;
  z-index: 10;
  left:50%;
  transform: translateX(-50%);
}
.power-line{
  position: absolute;
    width: 300rpx;
    z-index: 9;
    top: 339rpx;
    left: 80rpx; 

}
.on-line{
  top: 350rpx;
  height: 132rpx;
}
.off-line{
  height: 100rpx;
  top:345rpx;
}
.plug-board{
  position: absolute;
  left:0;
  width:200rpx;
  height:60rpx;
  top:440rpx;
}
.duster{
  position: fixed;
  z-index: 10;
}
.duster image{
  width:200rpx;
  height:200rpx;
}
.movable-box {
  width: 100vw;
  height: 100vh;
}
.movable-view{
  width: 200px;
  height: 200px;
}
.movable-btn {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: rgb(75, 64, 64);
  border-radius: 50%;
  font-size: 30rpx;
}